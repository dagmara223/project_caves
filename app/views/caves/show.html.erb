<%- model_class = Cave -%>
<p id="notice"><%= notice %></p>

<div id="section_show">
<h1><%= @cave.name %> - <%=t '.title', :default => model_class.model_name.human.titleize %> details</h1>
</div>
<div class="show_wrapper">
  <div class="show_table">
    <dl class="dl-horizontal">
      <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
      <dd><%= @cave.name %></dd>
      <dt><strong><%= model_class.human_attribute_name(:inventory_no) %>:</strong></dt>
      <dd><%= @cave.inventory_no %></dd>
      <dt><strong><%= model_class.human_attribute_name(:length) %>:</strong></dt>
      <dd><%= @cave.length %></dd>
      <dt><strong><%= model_class.human_attribute_name(:depth) %>:</strong></dt>
      <dd><%= @cave.depth %></dd>
      <dt><strong><%= model_class.human_attribute_name(:denivelation) %>:</strong></dt>
      <dd><%= @cave.denivelation %></dd>
      <dt><strong><%= model_class.human_attribute_name(:genesis) %>:</strong></dt>
      <dd><%= @cave.genesis %></dd>
      <dt><strong><%= model_class.human_attribute_name(:inventory_id) %>:</strong></dt>
      <dd><%= @cave.inventory_id %></dd>
      <dt><strong><%= model_class.human_attribute_name(:x_1992) %>:</strong></dt>
      <dd><%= @cave.x_1992 %></dd>
      <dt><strong><%= model_class.human_attribute_name(:y_1992) %>:</strong></dt>
      <dd><%= @cave.y_1992 %></dd>
      <dt><strong><%= model_class.human_attribute_name(:lat) %>:</strong></dt>
      <dd><%= @cave.lat %></dd>
      <dt><strong><%= model_class.human_attribute_name(:lon) %>:</strong></dt>
      <dd><%= @cave.lon %></dd>
    </dl>
  </div>
  <div class="show_map">
    <div id="map" style="height: 250px;"></div>
  </div>
</div>
<hr/>

<p id="pdf_link"><%= link_to "pdf", cafe_path(@cave, :format => "pdf") %></p>

<hr/>
<%= link_to t('.back', :default => t("helpers.links.back")),
              caves_path, :class => 'btn btn-default'  %>
<% if user_signed_in? %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_cafe_path(@cave), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              cafe_path(@cave),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
<hr/>

<% end %>

<script type="text/javascript">
  $(document).ready(function() {
    var lat = <%=@cave.lat%>;
    var lon = <%=@cave.lon%>;
    var marker = L.marker([lat, lon]);
    map.addLayer(marker);
    map.setZoom(10);
    map.setView([lat, lon]);
  });
</script>

